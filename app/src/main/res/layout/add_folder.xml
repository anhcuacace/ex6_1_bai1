<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm thư mục"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cancel_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:text="@string/cancel"
            android:textColor="@color/blue_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_save_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:text="@string/save"
            android:textColor="@color/blue_text"
            android:textSize="15sp" />


    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/edt_inputtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/add_toolbar"
        android:layout_margin="20dp"
        app:layout_constraintHeight_percent="0.07"
        android:background="@drawable/botron"
        android:hint="Nhập tên thư mục"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <EditText
        android:id="@+id/edt_inputcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_inputtitle"
        android:layout_margin="20dp"
        app:layout_constraintHeight_percent="0.3"
        android:background="@drawable/botron"
        android:hint="Nhập mo tả thư mục"
        android:textSize="20sp"
        android:gravity="top"
        android:padding="8dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>